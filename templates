    <script>
        // API キー (Render環境では使用されないが、コードの整合性のため空で定義)
        const apiKey = ""; 

        /**
         * @function resolveUrl
         * @description 相対パスを、現在のページのURLをベースにして絶対URLに安全に解決します。
         * fetchがblob: URLベースで相対パスの解析に失敗する問題を回避します。
         */
        function resolveUrl(path) {
            try {
                // window.location.hrefをベースにして、相対パスを絶対URLに変換
                // blob: URLの場合、これでルート相対パスを現在のベースURLに解決します。
                return new URL(path, window.location.href).toString();
            } catch (e) {
                console.error("URL resolution failed, using path as is:", path, e);
                return path;
            }
        }

        // --- データ取得ロジック ---

        async function fetchReport() {
            try {
                // 修正: resolveUrlを使用してURLを絶対パスとして解決します
                const url = resolveUrl('/get_report');
                const response = await fetch(url);
                
                if (response.status === 503) {
                    // レポート生成中の場合
                    document.getElementById('loading-state').classList.remove('hidden');
                    document.getElementById('report-details').classList.add('hidden');
                    console.log('Report is being generated (503). Retrying in 5 seconds...');
                    setTimeout(fetchReport, 5000); // 5秒後に再試行
                    return;
                }

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const report = await response.json();
                
                // データの挿入
                updateReportDetails(report);

                // ローディングを非表示にし、詳細を表示
                document.getElementById('loading-state').classList.add('hidden');
                document.getElementById('report-details').classList.remove('hidden');

            } catch (error) {
                console.error('レポートの取得中にエラーが発生しました:', error);
                document.getElementById('loading-state').innerHTML = `<p class="text-red-500 font-medium">レポートの取得に失敗しました。サーバーログを確認してください。</p>`;
            }
        }

        async function fetchStatus() {
            try {
                // 修正: resolveUrlを使用してURLを絶対パスとして解決します
                const url = resolveUrl('/report_status');
                const response = await fetch(url);
                if (!response.ok) throw new Error(`Status HTTP error! status: ${response.status}`);
                
                const statusData = await response.json();
                
                // ステータス表示の更新
                const statusEl = document.getElementById('status-display');
                statusEl.innerHTML = `
                    <span class="font-semibold text-blue-600">ステータス: ${statusData.status}</span> | 
                    <span class="font-semibold text-green-600">次回予測: ${statusData.next_prediction}</span>
                `;

            } catch (error) {
                console.error('ステータスの取得中にエラーが発生しました:', error);
            }
        }

        // --- UI更新ロジック ---

        function updateReportDetails(report) {
            // 予測アクションカードの更新
            const actionEl = document.getElementById('prediction-action');
            const cardEl = document.getElementById('prediction-card');
            actionEl.textContent = report.prediction.action;
            
            // 色の変更
            if (report.prediction.action.includes('BUY') || report.prediction.action.includes('強気')) {
                cardEl.classList.remove('border-red-500');
                cardEl.classList.add('border-green-500');
                actionEl.classList.add('text-green-600');
                actionEl.classList.remove('text-red-600');
            } else {
                cardEl.classList.remove('border-green-500');
                cardEl.classList.add('border-red-500');
                actionEl.classList.add('text-red-600');
                actionEl.classList.remove('text-green-600');
            }
            
            document.getElementById('confidence').textContent = `信頼度: ${report.prediction.confidence_score}`;
            document.getElementById('target-price').textContent = `目標価格: ${report.prediction.target_price.toLocaleString()} USD`;

            // 市場データカードの更新
            document.getElementById('closing-price').textContent = report.market_data.closing_price.toLocaleString();
            document.getElementById('market-date').textContent = report.market_data.date;
            document.getElementById('sma-20').textContent = report.market_data.sma_20.toLocaleString();

            // 高度なメトリクスの更新
            document.getElementById('sentiment-score').textContent = report.advanced_metrics.sentiment_score;
            document.getElementById('macro-indicator').textContent = report.advanced_metrics.macro_indicator;
            document.getElementById('market-volatility').textContent = report.advanced_metrics.market_volatility;

            // キーテイクアウェイの更新
            const takeawaysList = document.getElementById('key-takeaways-list');
            takeawaysList.innerHTML = '';
            report.key_takeaways.forEach(item => {
                const li = document.createElement('li');
                li.textContent = item;
                takeawaysList.appendChild(li);
            });

            // 最終更新日時
            document.getElementById('last-updated').textContent = `最終更新: ${report.latest_update}`;
        }

        // --- 初期ロードと定期実行 ---

        window.onload = function() {
            // 初回ロード
            fetchReport();
            fetchStatus();

            // ステータスを10秒ごとに更新
            setInterval(fetchStatus, 10000); 
            // レポートを30秒ごとに更新 (サーバーの負荷を考慮し、この間隔でポーリング)
            setInterval(fetchReport, 30000); 
        };
    </script>
</body>
</html>
